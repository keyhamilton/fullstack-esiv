generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Disciplina {
  id String @id @default(uuid())

  nome String

  professor Professor @relation(fields: [professorId], references: [id])

  professorId String

  alunos Aluno[]

  @@map("disciplina")
}

model Aluno {
  id String @id @default(uuid())

  nome String

  email String @unique

  disciplinas Disciplina[]

  @@map("aluno")
}

model Professor {
  id String @id @default(uuid())

  nome String

  email String @unique

  disciplinas Disciplina[]

  @@map("professor")
}
